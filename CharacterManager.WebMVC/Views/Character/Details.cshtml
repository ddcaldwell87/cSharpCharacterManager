                        </li>
                        <li class="list-group-item">
                            <span class="badge">@Html.DisplayFor(model => model.Stealth)</span>
                            @Html.DisplayNameFor(model => model.Stealth) <small>(Dex)</small>
                        </li>
                        <li class="list-group-item">
                            <span class="badge">@Html.DisplayFor(model => model.Survival)</span>
                            @Html.DisplayNameFor(model => model.Survival) <small>(Wis)</small>
                        </li>
                    </ul>
                </div>
            </div>

</section>

<ol class="breadcrumb">
    <li>@Html.ActionLink("Characters", "Index")</li>
    <li class="active">@ViewBag.CharacterName</li>

    <li class="pull-right">@Html.ActionLink("Delete", "Delete", new { id = Model.CharacterId })</li>
    <li class="pull-right">@Html.ActionLink("Edit", "Edit", new { id = Model.CharacterId })</li>
</ol>
